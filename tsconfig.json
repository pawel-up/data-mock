{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": [
      "ESNext", "DOM", "dom.iterable"
    ],
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "rootDir": "./.",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "incremental": true,
  },
  "include": [
    "src/**/*.ts", 
    "locales/**/*.ts",
    "src/index.ts"
  ],
  "exclude": [],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true,
  }
}
